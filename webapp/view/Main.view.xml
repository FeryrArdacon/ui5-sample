<mvc:View
	controllerName="my.sample.ui5.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<Page title="{i18n>title.helloPage}">
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					type="Transparent"
					text="{i18n>action.sayHello}"
					press="onSayHelloPressed"
				/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>